import React, { useState } from 'react'
import TopHeader from './components/TopHeader'
import {Route, Routes} from 'react-router-dom'
import Dashboard from './pages/Dashboard'
import Orders from './pages/Oders'
import Holdings from './pages/Holdings'
import Funds from './pages/Funds'
import Positions from './pages/Positions'
import Profile from './pages/Profile'
import Bids from './pages/Bids'
import Cart from './pages/Cart'
import WatchlistSidebar from './components/WatchlistSidebar'
import { CartProvider } from './context/CartContext'

function App() {
  // show sidebar by default on desktop
  const [isSidebarOpen, setIsSidebarOpen] = useState(true)
  const [activePage, setActivePage] = useState('Dashboard')

  return (
    <CartProvider>
      <div className="min-h-screen">
        <header>
          <TopHeader 
            activePage={activePage} 
            setActivePage={setActivePage} 
            toggleSidebar={() => setIsSidebarOpen((s) => !s)} 
          />
        </header>

        <div className="grid grid-cols-1 md:grid-cols-[18rem_1fr] lg:grid-cols-[21rem_1fr] min-h-[calc(100dvh-4rem)] pt-16">
          <div className="hidden md:block h-full">
            <WatchlistSidebar 
              isSidebarOpen={isSidebarOpen} 
              setIsSidebarOpen={setIsSidebarOpen} 
            />
          </div>
          <main className="h-full overflow-y-auto">
            <div className="px-4 md:px-6 my-6">
              <Routes>
                <Route path="/" element={<Dashboard />} />
                <Route path="/dashboard" element={<Dashboard />} />
                <Route path="/orders" element={<Orders />} />
                <Route path="/holdings" element={<Holdings />} />
                <Route path="/funds" element={<Funds />} />
                <Route path="/positions" element={<Positions />} />
                <Route path="/bids" element={<Bids />} />
                <Route path="/profile" element={<Profile />} />
                <Route path="/cart" element={<Cart />} />
              </Routes>
            </div>
          </main>
        </div>
      </div>
    </CartProvider>
  )
}

export default App